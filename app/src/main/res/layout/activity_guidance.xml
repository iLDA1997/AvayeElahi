<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundGuidance"
    tools:context=".Activity.GuidanceActivity">

    <com.blackgoblin.rtltoolbar.RtlToolbar
        android:id="@+id/toolbar_guidence"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="15dp" />

    <ScrollView
        android:id="@+id/guide_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarThumbVertical="@color/scroll_color"
        android:layout_margin="@dimen/padddingGuidance"
        android:layout_below="@id/toolbar_guidence">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/backgroundGuidanceText"
                android:gravity="right"
                android:paddingTop="@dimen/padddingGuidance"
                android:paddingHorizontal="@dimen/padddingGuidance"
                android:text="@string/guide_text1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/backgroundGuidanceText"
                android:gravity="right"
                android:textSize="15sp"
                android:paddingTop="@dimen/padddingGuidance"
                android:paddingHorizontal="@dimen/padddingGuidance"
                android:text="@string/guide_text2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/backgroundGuidanceText"
                android:gravity="right"
                android:paddingTop="@dimen/padddingGuidance"
                android:paddingHorizontal="@dimen/padddingGuidance"
                android:text="@string/guide_text3" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/backgroundGuidanceText"
                android:gravity="right"
                android:textSize="15sp"
                android:paddingTop="@dimen/padddingGuidance"
                android:paddingHorizontal="@dimen/padddingGuidance"
                android:text="@string/guide_text4" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/backgroundGuidanceText"
                android:gravity="right"
                android:paddingHorizontal="@dimen/padddingGuidance"
                android:paddingTop="@dimen/padddingGuidance"
                android:text="@string/guide_text5" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/backgroundGuidanceText"
                android:gravity="right"
                android:textSize="15sp"
                android:paddingTop="@dimen/padddingGuidance"
                android:paddingHorizontal="@dimen/padddingGuidance"
                android:text="@string/guide_text6" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/backgroundGuidanceText"
                android:gravity="right"
                android:paddingTop="@dimen/padddingGuidance"
                android:paddingHorizontal="@dimen/padddingGuidance"
                android:text="@string/guide_text7" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/backgroundGuidanceText"
                android:gravity="right"
                android:textSize="15sp"
                android:paddingTop="@dimen/padddingGuidance"
                android:paddingHorizontal="@dimen/padddingGuidance"
                android:text="@string/guide_text8" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/backgroundGuidanceText"
                android:gravity="right"
                android:padding="@dimen/padddingGuidance"
                android:text="@string/guide_text9" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>